<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E88E5">


    <include
        android:id="@+id/inc_header"
        layout="@layout/header_view"></include>

    <RelativeLayout
        android:id="@+id/rr_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inc_header"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/txt_admin_pswd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Admin PIN"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_admin_password"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/txt_admin_pswd"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/white"
            android:inputType="numberPassword"
            android:maxLength="4" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_admin_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rr_main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Submit"
        android:textColor="@android:color/white"/>



</RelativeLayout>

