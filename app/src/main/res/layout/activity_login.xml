<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E88E5">

    <include android:id="@+id/inc_header"
        layout="@layout/header_view"></include>

    <RelativeLayout
        android:id="@+id/rr_body"
        android:layout_below="@+id/inc_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">


        <TextView
            android:id="@+id/txt_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_centerHorizontal="true"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            />

        <RelativeLayout
            android:id="@+id/rr_mobNo"
            android:layout_below="@+id/txt_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_mob_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:text="Mobile Number"
                android:textColor="@android:color/white"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/edt_mob_no"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/txt_mob_no"
                android:inputType="number"
                android:digits="0123456789"
                android:maxLength="10"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rr_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rr_mobNo"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/txt_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Password"
                android:textColor="@android:color/white"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/txt_password"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="50dp"
                android:maxLength="4"
                android:password="true"
                android:digits="01234567890"
                android:inputType="numberPassword"
                android:layout_marginTop="10dp"
                android:background="@android:color/white" />

        </RelativeLayout>


        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rr_password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Submit"
            android:textColor="@android:color/white" />


        <TextView
            android:id="@+id/txt_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Don't have an account?Sign up now!"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            android:visibility="gone"/>


    </RelativeLayout>

</RelativeLayout>